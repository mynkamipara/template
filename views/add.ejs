<div class="container">
        <h1>Add User Data</h1>

        <% if(typeof errors != 'undefined'){ %> <% errors.forEach(function(error) { %>
          <p class="error_msg"><%= error.msg %> </p>
        <% }); %> <% } %>
    <div class="row">
            <div class="col-lg-6">
                  <form action="" method="post">
                          <div class="form-group">
                            <label for="email">Full Name</label>
                            <p style="color:red"><%= typeof error.fname != 'undefined' ? error.fname.msg : '' %></p>
                            <input id="email" type="text" class="form-control" name="fname" value="<%= typeof user.fname != 'undefined' ? user.fname : '' %>">
                          </div>
                          <div class="form-group">
                            <label for="email">Email</label>
                            <p style="color:red"><%= typeof error.email != 'undefined' ? error.email.msg : '' %></p>
                            <input id="email" type="text" class="form-control" name="email" value="<%= typeof user.email != 'undefined' ? user.email : '' %>">
                          </div>
                          <div class="form-group">
                              <label for="address">Birthdate</label>
                              <p style="color:red"><%= typeof error.bod != 'undefined' ? error.bod.msg: '' %></p>
                              <input type="date" class="form-control" name="bod" value="<%= typeof user.bod != 'undefined' ? user.bod : '' %>"> 
                            </div>
                 
                         
              
            </div>
            <div class="col-lg-6">
                  <div class="form-group">
                          <label for="contact">Contact</label>
                          <p style="color:red"><%= typeof error.contact != 'undefined' ? error.contact.msg : '' %></p>
                          <input id="contact" type="text" class="form-control" name="contact" value="<%= typeof user.contact != 'undefined' ? user.contact : '' %>">
                        </div>
                        <div class="form-group">
                          <label for="address">address</label>
                          <p style="color:red"><%= typeof error.address != 'undefined' ? error.address.msg : '' %></p>
                          <input type="text" class="form-control" name="address" value="<%= typeof user.address != 'undefined' ? user.address : '' %>"> 
                        </div>

                       
   
            </div>
           
         
        
       
    </div>
    <div class="text-center">
            <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i>Submit</button>
          </div>

        </form>
</div>
    
          